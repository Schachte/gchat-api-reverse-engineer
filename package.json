{
  "name": "google-chat-api",
  "version": "1.0.0",
  "description": "Google Chat API client with UI, server, and documentation",
  "private": true,
  "scripts": {
    "dev": "npm run serve:watch --prefix packages/gchat",
    "dev:server": "npm run serve:watch --prefix packages/gchat",
    "dev:docs": "cd documentation && ./serve.sh",
    "dev:all": "concurrently -n server,docs -c blue,green \"npm run dev:server\" \"npm run dev:docs\"",
    "build": "npm run build --prefix packages/gchat",
    "test": "npm test --prefix packages/gchat",
    "serve": "npm run serve --prefix packages/gchat"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
